</head>

<body>
    <header>
        <a href="Index"><img id="icon" src="~/Styles/icon.png"></a>
    </header>


    @if (ViewBag.username != null)
    {

        <div class="dropdown fixed-top">
            <button class="btn btn-secondary text-light btn-lg" data-toggle="dropdown" type="button"><i class="fas fa-bars"></i></button>
            <div class="dropdown-menu">
                <a href="Logout" class="dropdown-item">Log out</a>
                <a href="History" class="dropdown-item">History</a>
                <a href="Account" class="dropdown-item">Account</a>
            </div>
        </div>

    }

    <nav class="normal">
        <a class="buta" href="Scale">
            <i class="fa fa-balance-scale elo" aria-hidden="true"></i>
        </a>
        <a class="buta plus" href="Add">
            <i class="fa fa-plus elo" aria-hidden="true"></i>
        </a>
        <a class="buta" href="Signup">
            <i class="fa fa-user-plus elo" aria-hidden="true"></i>
        </a>
        <a class="buta plus" href="Login">
            <i class="fa fa-arrow-up elo" aria-hidden="true"></i>
        </a>
    </nav>
    <nav class="mobile">
        <a class="butam" href="Scale">
            <i class="fa fa-balance-scale elo" aria-hidden="true"></i>
        </a></br>
        <a class="butam plus" href="Add">
            <i class="fa fa-plus elo" aria-hidden="true"></i>
        </a></br>
        <a class="butam" href="Signup">
            <i class="fa fa-user-plus elo" aria-hidden="true"></i>
        </a></br>
        <a class="butam plus" href="Login">
            <i class="fa fa-arrow-up elo" aria-hidden="true"></i>
        </a></br>
    </nav>

    @{
        double kcalhelp = 0;
        double carbhelp = 0;
        double proteinhelp = 0;
        double fatshelp = 0;

        try
        {
            foreach (var item in Model)
            {
                kcalhelp += item.Kcal;
                carbhelp += item.Carb;
                proteinhelp += item.Protein;
                fatshelp += item.Fats;
            }
        }
        catch
        {

        }
    }

    <footer class="d-block" style="margin-top:40px;">
        Your Kcal limit: @ViewBag.kcallimits, Your actual count: Kcal: @kcalhelp
        Carbo: @carbhelp Protein: @proteinhelp Fats: @fatshelp
    </footer>


    <section style="height:40vh;">

        <table class="table table-borderless table-dark desktop">
            <thead>
                <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Calories</th>
                    <th scope="col">Protein</th>
                    <th scope="col">Carbohydrates</th>
                    <th scope="col">Fats</th>
                </tr>
            </thead>
            <tbody>
                @{
                    try
                    {
                        foreach (var item in Model)
                        {
                            kcalhelp += item.Kcal;
                            carbhelp += item.Carb;
                            proteinhelp += item.Protein;
                            fatshelp += item.Fats;

                            <tr>
                                <th scope="row">@Html.DisplayFor(model => item.Name)</th>
                                <td>@Html.DisplayFor(model => item.Kcal)</td>
                                <td>@Html.DisplayFor(model => item.Protein)</td>
                                <td>@Html.DisplayFor(model => item.Carb)</td>
                                <td>@Html.DisplayFor(model => item.Fats)</td>
                            </tr>
                        }
                    }
                    catch
                    {

                    }
                }


            </tbody>
        </table>
